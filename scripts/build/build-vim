#!/usr/bin/env bash
# @description build vim text editor
#
# @import console/info
# @dependency git

main () {
    strict  true
    verbose true

    # sudo apt-get install -y --no-install-suggests --no-install-recommends --force-yes \
    # git \
    # libatk1.0-dev \
    # libbonoboui2-dev \
    # libcairo2-dev \
    # libgnome2-dev \
    # libgnomeui-dev \
    # libgtk2.0-dev \
    # libncurses5-dev \
    # libperl-dev \
    # libx11-dev \
    # libxpm-dev \
    # libxt-dev \
    # lua5.1 \
    # lua5.1-dev \
    # python-dev \
    # python3-dev 

    # sudo yum install -y
    # ctags \
    # git \
    # lua \
    # lua-devel \
    # luajit \
    # luajit-devel \
    # perl \
    # perl-ExtUtils-CBuilder \
    # perl-ExtUtils-Embed \
    # perl-ExtUtils-ParseXS \
    # perl-ExtUtils-XSpp \
    # perl-devel \
    # python \
    # python-devel \
    # python3 \
    # python3-devel \
    # tcl-devel

    if [[ -d "${HOME}/.vim-dist" ]]
    then
        rm -rf "${HOME}/.vim-dist"
    fi 

    mkdir -p "${HOME}/.vim-dist/build"

    git clone --depth 1 https://github.com/vim/vim.git "${HOME}/.vim-dist/build"

    cd "${HOME}/.vim-dist/build" || exit
    git fetch origin refs/tags/v8.0.1322
    git reset --hard FETCH_HEAD
    make distclean

    # --enable-pythoninterp=yes \
    # --with-python-config-dir="$HOME/.pyenv/versions/2.7.11/lib/python2.7/config" \
    "${HOME}/.vim-dist/build/configure" --with-features=huge \
            --enable-multibyte \
            --enable-pythoninterp \
            --enable-luainterp=yes \
            --enable-fontset \
            --enable-gui=no \
            --enable-xim \
            --enable-cscope --prefix="${HOME}/.vim-dist"

    make VIMRUNTIMEDIR="${HOME}/.vim-dist/share/vim/vim80" -j 4
    make install

    _ info "Done."
}

onExit () {
    _ info "Removing temporary files and directories."

    if [[ -d "${HOME}/.vim-dist/build" ]]
    then
        rm -rf "${HOME}/.vim-dist/build"
    fi 
}
