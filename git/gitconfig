[core]
  excludesfile = ~/.dotfiles/git/gitignore
  attributesfile = ~/.dotfiles/git/gitattributes
  pager = delta
  ignorecase = false

[interactive]
  diffFilter = delta --color-only

[diff]
  colorMoved = default

[delta]
  features = side-by-side unobtrusive-line-numbers decorations
  whitespace-error-style = 22 reverse
  syntax-theme = 1337
  inspect-raw-lines = false

[delta "unobtrusive-line-numbers"]
  line-numbers = true
  line-numbers-left-format = "{nm:>4} ┊"
  line-numbers-right-format = "{np:>4} ┊"

[delta "decorations"]
  commit-decoration-style = bold yellow ul
  file-style = bold yellow ul
  file-decoration-style = none

[user]
  name = Mark Martirosian
  email = hello@markmartirosian.com
  signingkey = 0x8B6DD9F259DEF16A
[init]
  templateDir = ~/.dotfiles/git/template/

[push]
  default = simple
  followTags = true

[credential]
  helper = cache --timeout=36000

[color]
  ui = never

[status]
  relativePaths = true

[url "git@github.com:"]
  insteadOf = "gh:"
  insteadOf = "git://github.com"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
  pushInsteadOf = "https://github.com/"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
  pushInsteadOf = "https://gist.github.com/"

[alias]
  todo = grep -iEI "TODO|FIXME|FIX"
  who = "!sh -c 'git shortlog -s -n --all --no-merges -e'"
  amend = commit --amend
  next = "!svu --tag-mode all-branches next"
  major = "!svu --tag-mode all-branches major"
  minor = "!svu --tag-mode all-branches minor"
  patch = "!svu --tag-mode all-branches patch"
  current = "!svu --tag-mode all-branches current"

[gpg]
  program = gpg2

[pull]
  rebase = true

[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f

[commit]
  gpgsign = true
